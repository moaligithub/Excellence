@model Thebes_Acadeny.AddPlantViewModel


<div class="page-banner " style="background: -webkit-linear-gradient(-67deg, rgb(1, 13, 70), rgb(87, 0, 0)); background: linear-gradient(-67deg, rgb(1, 13, 70), rgb(87, 0, 0))">
    <div class="banner-section">
        <div class="container text-center wow fadeInUp">
            <h1 class="font-weight-normal" style="color:#00ff92">اضافه ماده</h1>
        </div>
    </div>
</div>


<div class="page-section">
    <div class="container">

        <form asp-action="Create" asp-controller="Plant" class="contact-form mt-5" enctype="multipart/form-data">
            <div class="row mb-3">
                <div class="col-sm-12 py-2 wow fadeInLeft">
                    <label style="text-align:right">اسم الماده</label>
                    <input type="text" asp-for="@Model.Name" class="form-control">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="@Model.Tearm" value="@ViewBag.teid" />
                <input type="hidden" asp-for="@Model.speid" value="@ViewBag.speid" />
                <input type="hidden" asp-for="@Model.LevelId" value="@ViewBag.levid" />

            </div>
            <input type="submit" value="اضافه" class="btn btn-info" />
        </form>
    </div>
</div>

@section Script{          
    <partial name="Partial" />
}