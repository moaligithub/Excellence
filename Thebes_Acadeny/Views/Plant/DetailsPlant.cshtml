@model Thebes_Acadeny.PlantViewModel

<div class="page-banner " style="background: -webkit-linear-gradient(-67deg, rgb(1, 13, 70), rgb(87, 0, 0)); background: linear-gradient(-67deg, rgb(1, 13, 70), rgb(87, 0, 0))">
    <div class="banner-section">
        <div class="container text-center wow fadeInUp">
            <h1 class="font-weight-normal" style="color:#00ff92">المواد</h1>
        </div>
    </div>
</div>




<section id="portfolio" class="section-bg">
    <div class="container">
        <div class="text-center">
            <a class="btn btn-primary" asp-action="Create" asp-route-levid="@ViewBag.levid" asp-route-speid="@ViewBag.speid" asp-route-teid="@ViewBag.teid" asp-controller="Plant" style="margin-bottom:3%">اضافه ماده</a>
        </div>
        <div class="row portfolio-container">

            @if (Model.Plants != null)
            {
                foreach (var item in Model.Plants)
                {
                    <div class="col-lg-6 col-md-6 portfolio-item filter-app wow fadeInUp">
                        <div class="portfolio-wrap">
                            <figure style="background: -webkit-linear-gradient(-67deg, rgb(1, 13, 70), rgb(87, 0, 0)); background: linear-gradient(-67deg, rgb(1, 13, 70), rgb(87, 0, 0)); ">
                            </figure>

                            <div class="portfolio-info" style="overflow:auto">
                                <div class="text-right" style="display:inline-block">
                                    <h4>@item.PlantName</h4>
                                </div>
                                <div style="display:block ; float:left" class="text-right">
                                    <a class="btn btn-primary" asp-controller="Plant" asp-action="Edit" asp-route-id="@item.PlantId">تعديل</a>
                                    <a class="btn btn-danger" asp-controller="Plant" asp-action="Delete" asp-route-Id="@item.PlantId">حذف</a>
                                </div>

                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>
