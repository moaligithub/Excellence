@model Thebes_Acadeny.PostStViewModel

<div class="page-banner " style="background: -webkit-linear-gradient(-67deg, rgb(1, 13, 70), rgb(87, 0, 0)); background: linear-gradient(-67deg, rgb(1, 13, 70), rgb(87, 0, 0))">
    <div class="banner-section">
        <div class="container text-center wow fadeInUp">
            <h1 class="font-weight-normal" style="color:#00ff92">بوستاتك</h1>
        </div>
    </div>
</div>


<section class="section-bg">
    <div class="container">
        <div class="text-center" style="margin-bottom:20px">
            <a style="font-size: 200%; margin: 1%" class="btn btn-info" asp-route-id="@Model.PlantId" asp-route-idad="@Model.Admin.AdminId" asp-action="Create" asp-controller="Post"> اضافه بوست جديد</a>
        </div>
        <div class="row justify-content-center">

            @if (Model.PostsAdmins.Count() != 0)
            {
                foreach (var item in Model.PostsAdmins)
                {
                    <div class="col-lg-12 justify-content-center" style="position:relative;text-align:center">
                        <div class="col-lg-12 sidebar-block wow zoomIn" style="position:center;text-align:center">
                            <article class="blog-details">
                                <div style="float:left;margin-bottom:20px">
                                    <a asp-action="Delete" asp-controller="Post" asp-route-id="@item.PostId" asp-route-plid="@Model.PlantId" asp-route-idad="@Model.Admin.AdminId" class="btn btn-danger">حذف</a>
                                    <a asp-action="Edit" asp-controller="Post" asp-route-id="@item.PostId" asp-route-plid="@Model.PlantId" asp-route-idad="@Model.Admin.AdminId" class="btn btn-success">تعديل</a>
                                </div>
                                <div style="clear:both">

                                </div>
                                <hr />
                                <div class="img-place custom-img-1" style="float:right">
                                    <img src="~/Tmb1/img/Admins/@item.Admin.ImageUrl" style="width:100px" class="circle-shape" alt="">
                                </div>

                                <div style="float:right;margin-top:30px;margin-right:5px">
                                    <h4>@item.Admin.FullName</h4>
                                </div>
                                <div style="clear:both"></div>

                                <hr />
                                <div class="text-right wow fadeInDown">
                                    <h5 style="margin-bottom:20px">@item.Text</h5>
                                    @if (item.ImageUrl != null)
                                    {
                                        <div class="col-lg-6" style="float:right">
                                            <img src="~/Tmb1/Posts/@item.ImageUrl" style="width:100%;height:100%" class="img-thumbnail" />
                                        </div>

                                    }
                                </div>

                            </article>

                        </div>
                    </div>


                }

            }
        </div>
    </div>
</section>
