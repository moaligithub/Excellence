@model Thebes_Acadeny.ProfileViewModel<Thebes_Acadeny.Models.Admin>


<div class="page-banner " style="background: -webkit-linear-gradient(-67deg, rgb(1, 13, 70), rgb(87, 0, 0)); background: linear-gradient(-67deg, rgb(1, 13, 70), rgb(87, 0, 0))">
    <div class="banner-section">
        <div class="container text-center wow fadeInUp">
            <h1 class="font-weight-normal" style="color:#00ff92">@Model.Adm.FullName</h1>
        </div>
    </div>
</div>



<div id="portfolio" class="page-section section-bg">
    <div class="container">

        <div class="col-lg-12 sidebar-block wow fadeInUp">
            <div style="display:block" class="text-center">
                <article class="blog-details">
                    <div class="img-place custom-img-1">
                        <img src="~/Tmb1/img/Admins/@Model.Adm.ImageUrl" style="width:200px" class="circle-shape" alt="">
                    </div>
                    <br><hr>
                    <div style="text-align: center;">
                        <h1>@Model.Adm.FullName</h1>
                        @if (Model.Adm.GategoryIdFk != 2)
                        {
                            <h4>@Model.Adm.Specialties.SpecialtiesName</h4>
                            <h4>@Model.Adm.Level.LevelName</h4>
                        }
                        else if (Model.Adm.GategoryIdFk == 2)
                        {
                            <h4>مشرف لدي مركز الشيماء</h4>
                        }

                        @if (Model.Adm.GategoryIdFk == 1)
                        {
                            <h6 style="color:blue">(...مؤسس ومطور الموقع...)</h6>
                        }

                    </div>
                    @if (Model.Adm.WhatsApp != null)
                    {
                        <hr>
                        <div class="text-center wow fadeInDown">
                            <a href="@Model.Adm.WhatsApp" target="_blank" style="text-decoration:none" class="btn btn-outline-primary">تواصل مع المشرف من هنا</a>
                        </div>
                    }

                </article>
            </div>

        </div>

        <div class="row portfolio-container">

            <a asp-action="BooksOneAdmin" asp-controller="Books" asp-route-id="@Model.Adm.AdminId">
                <div class="col-lg-6 col-md-6 portfolio-item filter-app wow fadeInUp">
                    <div class="portfolio-wrap">
                        <figure style="background: -webkit-linear-gradient(-47deg, rgb(0, 148, 121), rgb(73, 22, 106)); background: linear-gradient(-47deg, rgb(0, 148, 121), rgb(73, 22, 106));">
                        </figure>

                        <div class="portfolio-info" style="overflow:auto">
                            <h4>Pdf</h4>
                        </div>
                    </div>
                </div>
            </a>

            <a asp-action="VideoOneAdmin" asp-controller="Video" asp-route-id="@Model.Adm.AdminId">
                <div class="col-lg-6 col-md-6 portfolio-item filter-app wow fadeInUp">
                    <div class="portfolio-wrap">
                        <figure style="background: -webkit-linear-gradient(-47deg, rgb(0, 148, 121), rgb(73, 22, 106)); background: linear-gradient(-47deg, rgb(0, 148, 121), rgb(73, 22, 106));">
                        </figure>

                        <div class="portfolio-info" style="overflow:auto">
                            <h4>فيديوهات</h4>
                        </div>
                    </div>
                </div>
            </a>

            <a asp-action="PostsOneAdmin" asp-controller="Post" asp-route-id="@Model.Adm.AdminId">
                <div class="col-lg-6 col-md-6 portfolio-item filter-app wow fadeInUp">
                    <div class="portfolio-wrap">
                        <figure style="background: -webkit-linear-gradient(-47deg, rgb(0, 148, 121), rgb(73, 22, 106)); background: linear-gradient(-47deg, rgb(0, 148, 121), rgb(73, 22, 106));">
                        </figure>

                        <div class="portfolio-info" style="overflow:auto">
                            <h4>بوستات</h4>
                        </div>
                    </div>
                </div>
            </a>

            <a asp-action="ExamOneAdmin" asp-controller="Exam" asp-route-id="@Model.Adm.AdminId">
                <div class="col-lg-6 col-md-6 portfolio-item filter-app wow fadeInUp">
                    <div class="portfolio-wrap">
                        <figure style="background: -webkit-linear-gradient(-47deg, rgb(0, 148, 121), rgb(73, 22, 106)); background: linear-gradient(-47deg, rgb(0, 148, 121), rgb(73, 22, 106));">
                        </figure>

                        <div class="portfolio-info" style="overflow:auto">
                            <h4>اختبارات</h4>
                        </div>
                    </div>
                </div>
            </a>
        </div>

    </div>

</div>

