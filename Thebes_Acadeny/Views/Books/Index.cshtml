@model Thebes_Acadeny.BooksStViewModel

<div class="page-banner " style="background: -webkit-linear-gradient(-67deg, rgb(1, 13, 70), rgb(87, 0, 0)); background: linear-gradient(-67deg, rgb(1, 13, 70), rgb(87, 0, 0))">
    <div class="banner-section">
        <div class="container text-center wow fadeInUp">
            <h1 class="font-weight-normal" style="color:#00ff92">قائمه الكتب</h1>
        </div>
    </div>
</div>

<section id="portfolio" class="section-bg">
    <div class="container">
        <div class="text-center">
            <a style="font-size: 200%; margin: 1%" class="btn btn-secondary" asp-route-id="@Model.PlantId" asp-route-idad="@Model.AdminId" asp-action="Create" asp-controller="Books"> اضافه ملف جديد</a>
        </div>
        <div class="row portfolio-container">

            @if (Model.BooksAdmins.Count() != 0)
            {
                foreach (var item in Model.BooksAdmins)
                {
                    <div class="col-lg-6 col-md-6 portfolio-item filter-app wow fadeInUp">
                        <div class="portfolio-wrap">
                            <figure style="background: -webkit-linear-gradient(-47deg, rgb(0, 148, 121), rgb(73, 22, 106)); background: linear-gradient(-47deg, rgb(0, 148, 121), rgb(73, 22, 106));">
                            </figure>

                            <div class="portfolio-info" style="overflow:auto">
                                <h4>@item.BookName</h4>
                                <a asp-action="Delete" asp-controller="Books" asp-route-id="@item.BookId" asp-route-plid="@Model.PlantId" asp-route-idad="@Model.AdminId" class="btn btn-danger">حذف</a>
                            </div>
                        </div>
                    </div>
                }
            }

        </div>
    </div>
</section>