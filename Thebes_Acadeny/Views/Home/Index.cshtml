@model Thebes_Acadeny.IndexViewModel

@if (Model != null)
{
    <section id="intro">

        <div class="intro-container">
            <div id="introCarousel" class="carousel  slide carousel-fade" data-ride="carousel">

                <ol class="carousel-indicators"></ol>

                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <div class="carousel-background"><img src="~/Tmb1/img/intro-carousel/pexels-pixabay-267885.jpg" alt=""></div>
                        <div class="carousel-container">
                            <div class="carousel-content">
                                <h1 style="font-size:60px; color:white; font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">موقع امتياز</h1>
                                <p style="font-size:20px">هتلاقي هنا حاجات كتير بتسهلك المذاكره, لو انت مش عارف تذاكر , موقع امتياز سهلك المذاكره وسهلك الطريق  </p>
                                <a href="#portfolio" class="btn-get-started scrollto" style="text-decoration:none"><span style="font-size:30px">ابدا دلوقتي</span></a>
                            </div>
                        </div>
                    </div>

                    <div class="carousel-item">
                        <div class="carousel-background"><img src="~/Tmb1/img/intro-carousel/pexels-keira-burton-6147276.jpg" alt=""></div>
                        <div class="carousel-container">
                            <div class="carousel-content">
                                <h1 style="font-size:60px; color:white; font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">محاضرات الدكاتره Pdf</h1>
                                <p style="font-size:20px">هتلاقي كل المحاضرات المكتوبه من الدكاتره حسب تخصصك والسنه الدراسيه بتاعتك</p>
                                <a href="#portfolio" class="btn-get-started scrollto" style="text-decoration:none"><span style="font-size:30px">ابدا دلوقتي</span></a>
                            </div>
                        </div>
                    </div>

                    <div class="carousel-item">
                        <div class="carousel-background"><img src="~/Tmb1/img/intro-carousel/pexels-buro-millennial-1438072.jpg" alt=""></div>
                        <div class="carousel-container">
                            <div class="carousel-content">
                                <h1 style="font-size:60px; color:white; font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">محاضرات الدكاتره المسجله</h1>
                                <p style="font-size:20px">هتلاقي الفيديوهات المسجله من محاضرات الدكاتره الاونلاين وهتلاقيها في مسار خاص بيها علي حسب شعبتك</p>
                                <a href="#portfolio" class="btn-get-started scrollto" style="text-decoration:none"><span style="font-size:30px">ابدا دلوقتي</span></a>
                            </div>
                        </div>
                    </div>

                    <div class="carousel-item">
                        <div class="carousel-background"><img src="~/Tmb1/img/intro-carousel/people-6027028_1920.jpg" alt=""></div>
                        <div class="carousel-container">
                            <div class="carousel-content">
                                <h1 style="font-size:60px; color:white; font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">نصائح واخبار</h1>
                                <p style="font-size:20px">هتلاقي كل الاخبار اللي بتنزل , هتلاقي نصائح للمذاكره , وهتلاقي التكاليف المطلوبه من الدكاتره حسب تخصصك</p>
                                <a href="#portfolio" class="btn-get-started scrollto" style="text-decoration:none"><span style="font-size:30px">ابدا دلوقتي</span></a>
                            </div>
                        </div>
                    </div>

                    <div class="carousel-item">
                        <div class="carousel-background"><img src="~/Tmb1/img/intro-carousel/pexels-cottonbro-4778611.jpg" alt=""></div>
                        <div class="carousel-container">
                            <div class="carousel-content">
                                <h1 style="font-size:60px; color:white; font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">اختبارات اسبوعيه</h1>
                                <p style="font-size:20px">هتلاقي اختبارات اسبوعيه بتنزل لكل المواد وانت بنفسك هتحل الاختبارات دي وهتحصل علي تقييم في الاختبار , ودا علشان تضمن انك بتذاكر اول باول ومش فايتك حاجه ومستواك يفضل في تطور علطول</p>
                                <a href="#portfolio" class="btn-get-started scrollto" style="text-decoration:none"><span style="font-size:30px">ابدا دلوقتي</span></a>
                            </div>
                        </div>
                    </div>



                </div>
                <a class="carousel-control-prev" href="#introCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon ion-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>

                <a class="carousel-control-next" href="#introCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon ion-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>

            </div>
        </div>
    </section>
    <main id="main">
        <section id="portfolio" class="section-bg">
            <div class="container">

                <header class="section-header">
                    <h3 class="section-title" style="font-family: Consolas">التخصصات</h3>
                </header>

                <div class="row portfolio-container">

                    @if (Model.specialties.Count() != 0)
                    {
                        foreach (var item in Model.specialties)
                        {
                            <a asp-action="Levels" asp-controller="Home" asp-route-id="@item.SpecialtiesId">
                                <div class="col-lg-6 col-md-6 portfolio-item filter-app wow fadeInUp">
                                    <div class="portfolio-wrap">
                                        <figure style="background: -webkit-linear-gradient(-67deg, rgb(1, 13, 70), rgb(87, 0, 0)); background: linear-gradient(-67deg, rgb(1, 13, 70), rgb(87, 0, 0)); ">
                                        </figure>

                                        <div class="portfolio-info" style="overflow:auto">
                                            <h4>@item.SpecialtiesName</h4>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        }
                    }


                </div>

            </div>
        </section><!-- #portfolio -->

        <section id="testimonials" class="section-bg wow fadeInUp">
            <div class="container">

                <header class="section-header">
                    <h3 style="font-family: Consolas">مشرفين الموقع</h3>
                </header>

                <div class="owl-carousel testimonials-carousel">

                    @if (Model.owner == null && Model.admins.Count() == 0 && Model.adminShimaas.Count() == 0)
                    {
                        <h2 class="text-center">لا يوجد</h2>
                    }

                    @if (Model.owner != null)
                    {
                        <div class="testimonial-item">
                            <img src="~/Tmb1/img/Admins/@Model.owner.ImageUrl" class="testimonial-img" alt="" style="width:200px;height:200px">
                            <h3 style="font-size:40px">@Model.owner.FullName</h3>
                            <h4 style="font-size:30px">@Model.owner.Specialties.SpecialtiesName / @Model.owner.Level.LevelName</h4>
                            <p>
                                <img style="display:inline-block" src="~/Tmb1/img/quote-sign-left.png" class="quote-sign-left" alt="">
                                <span style="display:inline-block;font-size:20px">مطور ومؤسس الموقع</span>
                                <img style="display:inline-block" src="~/Tmb1/img/quote-sign-right.png" class="quote-sign-right" alt="">
                            </p>
                        </div>
                    }


                    @if (Model.adminShimaas.Count() != 0)
                    {
                        @foreach (var item in Model.adminShimaas)
                        {
                            <div class="testimonial-item">
                                <img src="~/Tmb1/img/Admins/@item.ImageUrl" class="testimonial-img" alt="" style="width:200px;height:200px">
                                <h3 style="font-size:40px">@item.FullName</h3>
                                <p>
                                    <img style="display:inline-block" src="~/Tmb1/img/quote-sign-left.png" class="quote-sign-left" alt="">
                                    <span style="display:inline-block;font-size:20px">مشرف لدي مركز الشيماء</span>
                                    <img style="display:inline-block" src="~/Tmb1/img/quote-sign-right.png" class="quote-sign-right" alt="">
                                </p>
                            </div>
                        }

                    }


                    @if (Model.admins.Count() != 0)
                    {

                        @foreach (var item in Model.admins)
                        {
                            <div class="testimonial-item">
                                <img src="~/Tmb1/img/Admins/@item.ImageUrl" class="testimonial-img" alt="" style="width:200px;height:200px">
                                <h3 style="font-size:40px">@item.FullName</h3>
                                <h4 style="font-size:30px">@item.Specialties.SpecialtiesName / @item.Level.LevelName</h4>
                                <p>
                                    <img style="display:inline-block" src="~/Tmb1/img/quote-sign-left.png" class="quote-sign-left" alt="">
                                    <span style="display:inline-block;font-size:20px">مشرف لدي الموقع</span>
                                    <img style="display:inline-block" src="~/Tmb1/img/quote-sign-right.png" class="quote-sign-right" alt="">
                                </p>
                            </div>
                        }

                    }



                </div>
                <div class="text-center">
                    <a asp-action="DetailsAdmin" asp-controller="Home" class="btn btn-danger">عرض قائمه المشرفين</a>
                </div>
            </div>
        </section><!-- #testimonials -->
        <!--==========================
        Team Section
    ============================-->
        <section id="team">
            <div class="container wow fadeInUp">
                <div class="section-header">
                    <h3 style="font-family: Consolas">عن الموقع</h3>
                    <p style="font-size:30px">موقع امتيار غير تابع لاكاديميه طيبه ولاكنه تحت اشراف بعض الطلبه المتفوقين وهدف الموقع انه يساعد الطلاب علي المذاكره ويرشدهم لطرق كويسه للمذاكره ودا بيحصل عن طريق انه بيضم المحاضرات اللازمه وبيضم اختبارات لقياس مستوي الطلاب في جميع التخصصات وبينزل فيه اخبار عن التكاليف المطلوبه من الدكاتره والموقع مجاني بالكامل وغير ربحي والموقع من تطوير الطالب محمد علي وتحت اداره مجموعه من الطلبه المتفوقين</p>
                </div>
                <div class="text-center">
                    <a style="font-size:25px" asp-action="Message" asp-controller="Home" class="btn btn-primary">ارسل لنا رساله من هنا</a>
                </div>
            </div>
        </section><!-- #team -->
    </main>
           
}

@section Script{
    <partial name="Partial" />
}
