@model Thebes_Acadeny.DisplayMessage

<div class="page-banner " style="background: -webkit-linear-gradient(-67deg, rgb(1, 13, 70), rgb(87, 0, 0)); background: linear-gradient(-67deg, rgb(1, 13, 70), rgb(87, 0, 0))">
    <div class="banner-section">
        <div class="container text-center wow fadeInUp">
            <h1 class="font-weight-normal" style="color:#00ff92">الرسائل المرسله</h1>
        </div> <!-- .container -->
    </div> <!-- .banner-section -->
</div>

<section id="testimonials" class="section-bg wow fadeInUp">

    @if (Model != null)
    {
        foreach (var item in Model.messagesUsers)
        {
            <div class="container sidebar-block">
                <h4 class="sidebar-title">@item.DateTime</h4>
                <p style="text-align:right">@item.MessageText</p>
                <a asp-action="DeleteMeesage" asp-controller="Home" asp-route-id="@item.MessageUserId" class="btn btn-outline-danger">حذف</a>
            </div>
        }
     }
</section>